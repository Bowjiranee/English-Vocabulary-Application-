<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/bg07"
    tools:context=".PlayingActivity">
    <TableLayout
        android:id="@+id/header_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:gravity="center_horizontal"
            android:layout_width="match_parent">

            <TextView
                android:text="Level : "
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/levelGame"
                android:textSize="32sp"
                android:text="1"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black" />
            <TextView
                android:layout_marginLeft="120dp"
                android:text="SCORE : "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/scorePlayer1"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:textSize="32sp"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_score"
        android:layout_marginTop="18dp"
        android:stretchColumns="*">

        <LinearLayout android:orientation="horizontal">

            <ImageView
                android:id="@+id/game_player1_image_view"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="180dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_weight="2" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="-168dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/avatar01" />
        </LinearLayout>

        <TableRow android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/image_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="storage-image-name" />

                <TextView
                    android:id="@+id/sound_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="storage-sound-name" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/button_speak_game"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/mic_enable" />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:id="@+id/check_sound_image_game"
                        android:layout_width="96dp"
                        android:layout_height="96dp" />
                </LinearLayout>

            </LinearLayout>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <info.hoang8f.widget.FButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="NEXT"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/end_button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="END"/>
    </LinearLayout>
</RelativeLayout>